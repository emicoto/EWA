/* 宠物设定 */
<<set $pet to {
    name:"史莱姆", type:1, level:1,
    HP:[50,50], SP:[200,200], MP:[200,200],
    ATK:3, DEF:18, MATK:2, MDEF:8, SPD:3,
    好感:100, 忠诚:0, 欲望:30, 支配:0,
    gender:"m", genital: {"阴茎":16, "子宫":null},
