    outter : [],    top : [],    bottom : [],
    inner_up : [],    inner_bt : [],
    shoes : [],    legs : [],

    hat : [],    face : [],    neck : [],
    hand : [],    back : [],
}>>

<<set $closet.top[0] to clone(A.top[4])>>
<<set $closet.bottom[0] to clone(A.bottom[4])>>
<<set $closet.inner_bt[0] to clone(A.inner_bt[1])>>
